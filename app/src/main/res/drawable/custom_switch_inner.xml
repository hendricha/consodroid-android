<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/base1" />
            <stroke
                android:width="1dp"
                android:color="@color/base0" />
            <corners
                android:radius="100dp" />

        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/cyan"
                android:endColor="@color/base02"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/base00" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/base3"
                android:endColor="@color/base2"
                android:angle="270" />
            <stroke
                android:width="0.3dp"
                android:color="@color/base1" />
            <corners
                android:radius="100dp" />
            <padding
                android:left="0dp"
                android:top="10dp"
                android:right="0dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
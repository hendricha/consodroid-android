<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#70c656"
                android:endColor="#53933f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#70c656" />
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:radius="100dp" />

        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="#70c656"
                android:endColor="#53933f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#eee"
                android:endColor="#ccc"
                android:angle="270" />
            <stroke
                android:width="0.3dp"
                android:color="#999" />
            <corners
                android:radius="100dp" />
            <padding
                android:left="0dp"
                android:top="10dp"
                android:right="0dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>